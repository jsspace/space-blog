<!DOCTYPE html>
<html lang="cn">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0,user-scalable=1.0">
    <title>后台管理</title>
    <link rel="stylesheet" href="/css/lib/bootstrap.min.css">
    <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
<div class="container">
    <nav class="navbar navbar-default" role="navigation">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Admin</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav" id="myTab">
                    <li class="active"><a href="#article" data-toggle="tab">文章</a></li>
                    <li><a href="#user" data-toggle="tab">用户</a></li>
                </ul>
                <form class="navbar-form navbar-left" role="search">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Search">
                    </div>
                    <button type="submit" class="btn btn-default">查询</button>
                </form>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>

    <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="article">
            <ul class="nav nav-tabs actions-nav">
                <li class="active">
                    <a href="javascript:void(0)">List (<%= post.length %>)</a>
                </li>
            </ul>
            <table class="table table-striped table-bordered table-hover model-list" id="article">
                <tr>
                    <th>序列</th>
                    <th>标题</th>
                    <th>路由</th>
                    <th>分类</th>
                    <th>创建时间</th>
                    <th>浏览量</th>
                    <th>操作</th>
                </tr>
                <% for(var i = 0; i < post.length; i++) { %>
                <tr id="<%= post[i]._id %>">
                    <td><%= i %></td>
                    <td><%= post[i].post_title %></td>
                    <td><%= post[i].post_url %></td>
                    <td><%= post[i].tags %></td>
                    <td><%= post[i].createAt %></td>
                    <td><%= post[i].view %></td>
                    <td>
                        <button type="button" class="btn btn-success _update">修改</button>
                        <button type="button" class="btn btn-danger _delete">删除</button>
                    </td>
                </tr>
                <% } %>
            </table>
            <ul class="pagination">
                <li><a href="#">&laquo;</a></li>
                <li class="active"><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
                <li><a href="#">&raquo;</a></li>
            </ul>
        </div>
        <div role="tabpanel" class="tab-pane" id="user">
            <table class="table table-striped table-bordered table-hover model-list" id="user">
                <tr>
                    <th>序列</th>
                    <th>用户名</th>
                    <th>操作</th>
                </tr>
            </table>
        </div>
        <div role="tabpanel" class="tab-pane" id="settings">...</div>
    </div>
</div>

<script type="text/javascript" src="/js/lib/jquery-2.1.4.min.js"></script>
<script type="text/javascript" src="/js/lib/bootstrap.min.js"></script>
<script type="text/javascript" src="/js/admin.js"></script>
</body>
</html>